.Login {
    background-color: $loginBackgroundColor;
    width: $loginWidth;
    padding: $loginPadding;
    centered-box();

    .logo {
        icon-font-class('uib-services-icons');
        font-size: $loginLogoFontSize;
    }

    .username,
    .password {
        .dijitTextBox {
            width: 100%;
            height: $loginTextInputHeight;
            border-color: $loginTextInputBorderColor;
            padding-left: 10px;
        }

        .dijitInputInner {
            height: $loginTextInputHeight;
            font-size: $loginFontSize;
            color: $loginTextColor;
        }

        .dijitPlaceHolder {
            font-size: 18px;
            font-style: normal;
            top: 8px;
            left: 0;
            color: $loginPlaceholderColor;
        }

        .errorMessage {
            display: none;
        }

        &.error {
            .dijitTextBox {
                border-color: orange;
            }

            .errorMessage {
                display: inline;
                color: orange;
                padding-top: 2px;
            }
        }
    }

    .password {
        margin-top: 15px;
    }

    .login {
        margin-top: 15px;
        height: 40px;
        background-color: $loginButtonBackgroundColor;
        color: white;

        .dijitButton,
        .dijitButtonNode {
            height: 100%;
            width: 100%;
        }

        .dijitButton {
            margin: 0;
        }

        .dijitButtonContents {
            height: 100%;
            line-height: 34px;
            font-size: 20px;
        }
    }

    .stay-logged-in {
        text-align: center;
        margin-top: 10px;
        line-height: 17px;
        cursor: pointer;

        .dijitCheckBox {

        }

        .dijitCheckBoxInput {
            cursor: pointer;
        }

        &:before {
            content: '';
            border: 2px solid #888;
            border-radius: $loginCheckboxSize;
            width: $loginCheckboxSize;
            height: $loginCheckboxSize;
            display: inline-block;
            position: absolute;
            line-height: 1.2;
        }

        &.is-checked-true:before {
            icon-font-class('uib-app-related-icons');
            content: '5';
            border: 2px solid #000;
            font-size: 10px;
            border-radius: $loginCheckboxSize;
            width: $loginCheckboxSize;
            height: $loginCheckboxSize;
            display: inline-block;
            position: absolute;
            line-height: 1.2;
        }
    }

    .links {
        text-align: center;
        margin-top: 30px;

        a {
            margin-right: 5px;
            text-decoration: none;
        }
    }
}
