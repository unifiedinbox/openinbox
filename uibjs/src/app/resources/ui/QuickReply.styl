.QuickReply {
	color: $quickReplyColor;
	padding: 10px;

	[class^="icon-app-"],
	.DropDown {
		cursor: pointer;
	}

	[class^="icon-app-"] {
		color: $uibGrey;
	}

	.icon-app-arrows-expand {
		position: absolute;
		right: 0;
		top: 0;
	}

	.icon-app-delete {
		font-size: 18px;
		position: absolute;
		right: 0;
		bottom: 0;
	}

	.dijitButton {
		background-color: $buttonBackground;
		color: $buttonColor;
		padding: 6px;
	}

	.dijitButtonNode {
		border: none;
	}

	.dijitButtonContents,
	.dijitButtonNode,
	.dijitButtonText {
		&:focus {
			outline: none;
		}
	}

	.DropDown.open {
		.LabelContainer {
			background-color: $quickReplyActiveColor;
		}
	}

	textarea {
		border: none;
		color: $quickReplyColor;
		font: 1em/1.3 $bodyFontFamily;
		height: 80px;
		margin: 8px 0;
		resize: none;
	}

	.MessageComposition-actions {
		height: 40px;
		padding: 10px 0 0;
	}

	.MessageComposition-action--trash {
		bottom: 0;
		right: 0;
	}
}

.QuickReply_top {
	position: relative;

	.LabelContainer {
		padding: 6px;
	}
}

.QuickReply_replyIcon {
	font-size: 18px;
}

.QuickReply_recipientList {
	color: $uibBlue;
}

.QuickReply_action0-0,
.QuickReply_action1-1 {
	&.item,
	&.item:before {
		color: $uibGrey;
		cursor: default;
	}
}

.RecipientList_SelectAllNone {
	color: $uibBlue;
	cursor: pointer;
	display: inline-block;
	padding: 8px;
}

.MoveToFolderCheckbox,
.RecipientCheckbox {
	cursor: pointer;

	&:before {
		border: 2px solid $quickReplyColor;
		border-radius: $loginCheckboxSize;
		color: $quickReplyColor;
		content: '';
		display: inline-block;
		height: $loginCheckboxSize;
		line-height: $loginCheckboxSize;
		margin-right: 5px;
		position: relative;
		right: 2px;
		top: 3px;
		width: $loginCheckboxSize;
	}

	&.is-checked-true:before {
		icon-font-class('uib-app-related-icons');

		content: '5';
		display: inline-block;
		font-size: 0.7em;
		height: $loginCheckboxSize;
		line-height: $loginCheckboxSize;
		text-align: center;
		top: 0;
		width: $loginCheckboxSize;
	}
}
